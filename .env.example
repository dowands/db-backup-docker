# Cron schedule (default: daily at 2am)
CRON_SCHEDULE=0 2 * * *

# Run backup immediately on container start
BACKUP_ON_START=false

# MySQL databases
# Format: host:port:user:password:db1,db2|host2:port:user:password:db3
MYSQL_DATABASES=localhost:3306:root:password:mydb1,mydb2

# PostgreSQL databases
# Format: host:port:user:password:db1,db2|host2:port:user:password:db3
PG_DATABASES=localhost:5432:postgres:password:pgdb1

# S3 configuration
S3_BUCKET=my-backups
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_PREFIX=db-backups/

# Delete backups older than N days (optional, leave empty to disable)
BACKUP_RETENTION_DAYS=30
